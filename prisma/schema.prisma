generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id          String   @id @default(cuid())
  title       String
  description String
  doctorName  String
  slug        String   @unique
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  comments    Comment[]
  likes       Like[]
  analytics   Analytics[]
  
  @@map("posts")
}

model Comment {
  id        String   @id @default(cuid())
  postId    String
  authorName String
  content   String
  createdAt DateTime @default(now())
  
  // Relations
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  @@map("comments")
}

model Like {
  id        String   @id @default(cuid())
  postId    String
  ipAddress String
  userAgent String?
  createdAt DateTime @default(now())
  
  // Relations
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  @@unique([postId, ipAddress])
  @@map("likes")
}

model Analytics {
  id        String   @id @default(cuid())
  postId    String?
  date      DateTime @default(now())
  pageViews Int      @default(0)
  ipAddress String
  userAgent String?
  
  // Relations
  post      Post?    @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  @@map("analytics")
}

model Admin {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("admins")
}